<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-md-4"><%= form.label :name, class: 'labels' %><%= form.text_field :name, class: 'form-control', placeholder: 'Enter name' %></div>
  <div class="col-md-4"><%= form.label :price, class: 'labels' %><%= form.number_field :price, class: 'form-control', placeholder: 'Enter price', step: 0.1 %></div>
  <div class="col-md-4"><%= form.label :des, class: 'labels' %><%= form.text_area :des, class: 'form-control', placeholder: 'Enter description' %></div>
  <div class="col-md-4">
    <select name="category_id">
      <% @categories.each do |category| %>
        <option value="<%= category.id %>"><%= category.name %></option>
      <% end %>
    </select>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
